<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:elevation="1dp">

    <TextView
        android:id="@+id/genre_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Genre"
        android:paddingTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/genre_btn_layout_viewer"
        android:layout_below="@id/genre_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        />


    <TextView
        android:id="@+id/artist_title"
        android:layout_below="@id/genre_btn_layout_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Artist"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artist_list"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_below="@id/artist_title"
        />

    <TextView
        android:id="@+id/playlist_title"
        android:layout_below="@id/artist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Playlist"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlist_title"/>

</RelativeLayout>