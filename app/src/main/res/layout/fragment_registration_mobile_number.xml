<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_scroll_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:scrollbars="none"
    android:background="@color/colorDarkBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/ic_mobile_img"
                android:background="@color/colorTransparent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:text="Registration"
                android:textSize="32sp"
                android:layout_margin="10dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorTextSecondary"
                android:text="Enter your mobile number, we will \n send you OTP to verify later."
                android:textSize="18sp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_margin="20dp"
                android:textStyle="normal"
                android:minLines="3"
                android:maxLines="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="20dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/mobile_number_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/xxxxx_xxxxx"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textAlignment="center"
                android:maxLength="10"
                android:focusable="true"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/rounded_btn_20"
                android:backgroundTint="#222"
                android:layout_margin="10dp"
                android:autofillHints="no" />

            <Button
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="continue"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="normal"
                android:textSize="18sp"
                android:padding="15dp"
                android:background="@drawable/rounded_btn_20"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>